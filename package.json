{
  "name": "antd-mobile-packages",
  "private": true,
  "scripts": {
    "init": "npm run svgo && node scripts/icon.js",
    "postinstall": "npm run bootstrap",
    "start": "dumi dev",
    "build-doc": "dumi build",
    "compile": "father-build",
    "lint": "prettier packages/**/*.{ts,tsx} --check && stylelint packages/**/*.less",
    "format": "prettier packages/**/*.{ts,tsx} --write && stylelint packages/**/*.less --fix",
    "ci": "npm run init && npm run lint && npm run compile && npm run test",
    "test": "umi-test --coverage",
    "bootstrap": "lerna bootstrap --hoist",
    "prepub": "npm run ci",
    "pub": "lerna publish",
    "svgo": "svgo -f ./packages/antd-mobile-icons/icons -o ./packages/antd-mobile-icons/icons/out --config=./.svgo.yml"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/enzyme": "^3.9.3",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "babel-plugin-version": "^0.2.3",
    "dumi": "^1.0.11",
    "enzyme-to-json": "^3.4.3",
    "father-build": "^1.17.1",
    "fs-extra": "^8.1.0",
    "globby": "^10.0.1",
    "husky": "^3.1.0",
    "lerna": "^3.0.0",
    "lint-staged": "^10.0.7",
    "mutationobserver-shim": "^0.3.5",
    "prettier": "^1.19.1",
    "stylelint": "^12.0.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-standard": "^19.0.0",
    "svgo": "^1.3.2",
    "typescript": "^3.7.2",
    "umi-test": "^1.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  }
}
